{
  "manifest_version": 3,
  "name": "CoFounder Circle CRM",
  "version": "1.0.0",
  "description": "Sync LinkedIn connections to your app with one click. Securely extract and sync your professional network.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_title": "CoFounder Circle CRM"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "Your Company Name",
  "homepage_url": "https://your-website.com",
  "minimum_chrome_version": "88"
} 